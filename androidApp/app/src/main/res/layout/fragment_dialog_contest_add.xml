<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:background="@color/white"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        app:cardCornerRadius="30dp"
        app:cardBackgroundColor="@color/turquoise_800">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:minWidth="250dp"
            android:background="#00000000"
            android:padding="15dp">
            <TextView
                android:id="@+id/contest_title_dialog"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Олимпиада им. Келдыша"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/mono_bold"
                android:textColor="@color/grey_900"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toLeftOf="@id/btn_close_dialog"
                />

            <ImageButton
                android:id="@+id/btn_close_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:drawable/ic_menu_close_clear_cancel"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />

            <ImageButton
                android:id="@+id/btn_add_dialog"
                android:layout_width="40dp"
                android:layout_height="40dp"

                android:background="@drawable/check_icon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />

            <TextView
                android:id="@+id/date_picker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="Установить дату"
                android:textColor="@color/grey_900"
                android:fontFamily="@font/mono_semibold_italic"

                app:layout_constraintTop_toBottomOf="@id/contest_title_dialog"
                app:layout_constraintStart_toStartOf="@id/contest_title_dialog"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="100dp"
                app:layout_constraintHorizontal_bias="0"
                />

            <ImageButton
                android:id="@+id/btn_clear_date"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@android:drawable/ic_menu_close_clear_cancel"
                android:visibility="gone"
                tools:visibility="visible"
                app:layout_constraintLeft_toRightOf="@id/date_picker"
                app:layout_constraintTop_toTopOf="@id/date_picker"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginHorizontal="10dp"
                app:layout_constraintHorizontal_bias="0.1"
                />


            <TextView
                android:id="@+id/notification_picker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Установить уведомление"
                android:textColor="@color/grey_900"
                android:fontFamily="@font/mono_semibold_italic"

                app:layout_constraintTop_toBottomOf="@id/date_picker"
                app:layout_constraintStart_toStartOf="@id/date_picker"
                app:layout_constraintEnd_toStartOf="@id/btn_add_dialog"
                app:layout_constraintHorizontal_bias="0"
                android:layout_marginEnd="30dp"
                />

            <ImageButton
                android:id="@+id/btn_clear_notification"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@android:drawable/ic_menu_close_clear_cancel"
                android:visibility="gone"
                tools:visibility="visible"
                android:layout_marginHorizontal="10dp"
                app:layout_constraintLeft_toRightOf="@id/notification_picker"
                app:layout_constraintTop_toTopOf="@id/notification_picker"
                app:layout_constraintRight_toLeftOf="@id/btn_add_dialog"
                app:layout_constraintHorizontal_bias="0.1"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>


